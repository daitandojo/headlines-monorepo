{
  "name": "headlines-monorepo",
  "version": "2.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @headlines/client dev",
    "build": "pnpm --filter \"./apps/**\" build",
    "build:local": "pnpm --filter @headlines/client build:local",
    "pipeline": "pnpm --filter @headlines/pipeline pipeline --",
    "cli:help": "pnpm --filter @headlines/pipeline cli:help",
    "test:upserter": "pnpm --filter @headlines/pipeline test:upserter --",
    "db:seed:all": "pnpm --filter @headlines/pipeline db:seed:all",
    "seed:ingest-opportunities": "pnpm --filter @headlines/pipeline seed:ingest-opportunities --",
    "db:seed:settings": "pnpm --filter @headlines/pipeline db:seed:settings",
    "db:seed:countries": "pnpm --filter @headlines/pipeline db:seed:countries",
    "db:seed:admin": "pnpm --filter @headlines/pipeline db:seed:admin",
    "db:purge-external": "pnpm --filter @headlines/pipeline db:purge-external",
    "maintenance:delete-relevant-today": "pnpm --filter @headlines/pipeline maintenance:delete-relevant-today --",
    "maintenance:refresh": "pnpm --filter @headlines/pipeline maintenance:refresh --",
    "maintenance:reset-assessed-today": "pnpm --filter @headlines/pipeline maintenance:reset-assessed-today --",
    "maintenance:reset-relevant-today": "pnpm --filter @headlines/pipeline maintenance:reset-relevant-today --",
    "maintenance:backfill-assessed": "pnpm --filter @headlines/pipeline maintenance:backfill-assessed --",
    "maintenance:delete-today": "pnpm --filter @headlines/pipeline maintenance:delete-today --",
    "maintenance:reprocess-specific": "pnpm --filter @headlines/pipeline maintenance:reprocess-specific --",
    "maintenance:reprocess": "pnpm --filter @headlines/pipeline maintenance:reprocess --",
    "maintenance:fix-countries": "pnpm --filter @headlines/pipeline maintenance:fix-countries --",
    "maintenance:backfill-countries": "pnpm --filter @headlines/pipeline maintenance:backfill-countries --",
    "maintenance:recover-opps": "pnpm --filter @headlines/pipeline maintenance:recover-opps --",
    "results:list-events": "pnpm --filter @headlines/pipeline results:list-events",
    "results:resend-today": "pnpm --filter @headlines/pipeline results:resend-today",
    "results:send-last-events": "pnpm --filter @headlines/pipeline results:send-last-events --",
    "subscribers:list": "pnpm --filter @headlines/pipeline subscribers:list",
    "subscribers:update": "pnpm --filter @headlines/pipeline subscribers:update --",
    "watchlist:list": "pnpm --filter @headlines/pipeline watchlist:list --",
    "sources:list": "pnpm --filter @headlines/pipeline sources:list --",
    "sources:list-headlines": "pnpm --filter @headlines/pipeline sources:list-headlines --",
    "sources:debug-content": "pnpm --filter @headlines/pipeline sources:debug-content --",
    "sources:scrape-one": "pnpm --filter @headlines/pipeline sources:scrape-one --",
    "sources:scrape-many": "pnpm --filter @headlines/pipeline sources:scrape-many --",
    "sources:discover": "pnpm --filter @headlines/pipeline sources:discover --",
    "sources:maintain": "pnpm --filter @headlines/pipeline sources:maintain",
    "sources:update": "pnpm --filter @headlines/pipeline sources:update --",
    "sources:browse": "pnpm --filter @headlines/pipeline sources:browse --",
    "test:save-logic": "pnpm --filter @headlines/pipeline test:save-logic",
    "tools:diagnose": "pnpm --filter @headlines/pipeline tools:diagnose",
    "tools:opp-factory": "pnpm --filter @headlines/pipeline tools:opp-factory",
    "tools:backfill-graph": "pnpm --filter @headlines/pipeline tools:backfill-graph"
  },
  "dependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@tailwindcss/typography": "^0.5.13",
    "autoprefixer": "^10.4.19",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.4",
    "eslint-plugin-import": "^2.29.1",
    "postcss": "^8.4.38",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.5.4"
  },
  "packageManager": "pnpm@9.6.0",
  "pnpm": {
    "allowed-build-scripts": [
      "sharp",
      "bcrypt"
    ],
    "overrides": {
      "sharp": "0.33.4",
      "react": "18.3.1",
      "react-dom": "18.3.1"
    }
  }
}
